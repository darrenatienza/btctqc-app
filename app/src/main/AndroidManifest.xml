<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.btctqc_app">

    <uses-permission android:name="android.permission.WAKE_LOCK" />


    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"

        android:theme="@style/Theme.BusTransitContactTracingApp">
        <activity android:name=".ConditionUpdateActivity_"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.BusTransitContactTracingApp.NoActionBar">

        </activity>
        <!--
               Set to true if your app is Standalone, that is, it does not require the handheld
               app to run.
        -->
        <activity
            android:name=".Scanner_"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_scanner">

        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".ui.login.LoginActivity_"
            android:label="@string/title_activity_login"
            android:theme="@style/Theme.BusTransitContactTracingApp.NoActionBar">

        </activity>
        <activity
            android:name=".MainActivity_"
            android:screenOrientation="portrait"
            android:label="@string/app_name"
            android:theme="@style/Theme.BusTransitContactTracingApp.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>